<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#38383A"
    android:gravity="center_horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/video_channel_fixed_bg"
        android:gravity="center"
        android:paddingLeft="14dp"
        android:paddingTop="8dp"
        android:paddingRight="14dp"
        android:paddingBottom="8dp"
        android:text="标签名"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_add_or_delete_video_channel"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/tv_tag_name"
        android:layout_alignRight="@+id/tv_tag_name"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="-4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_delete_video_channel" />
</RelativeLayout>
