<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="90dp"
    android:background="@color/color_38383A"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_video_bg"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_default_hot_star_circle" />

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_below="@+id/iv_video_bg"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="你好歹是的分"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_video_duration"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="11:20"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/iv_video_bg"
        android:layout_alignBottom="@+id/iv_video_bg"
        android:layout_height="wrap_content"
        android:textSize="8sp" />
</RelativeLayout>
