<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#373739"
    android:orientation="vertical">

    <View
        android:visibility="gone"
        android:id="@+id/v_circle_type_divider_top"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#2D2E30" />
    <!-- android:layout_marginTop="2dp"-->
    <com.zhiyicx.baseproject.widget.button.CombinationButton
        android:id="@+id/tv_circle_type"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:dividerRightMargin="@dimen/spacing_normal"
        app:leftText="@string/information"
        app:leftTextColor="@color/white"
        app:rightImage="@mipmap/ic_arrow_right_white"
        app:showLine="false" />

    <View
        android:id="@+id/v_circle_type_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#414143" />
</LinearLayout>